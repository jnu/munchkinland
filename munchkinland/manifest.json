{
  "manifest_version": 2,
  "name": "Munchkinland",
  "short_name": "mkin",
  "description": "An extension for rendering ANSI color codes in text content.",
  "version": "1.0.1",
  "content_scripts": [{
    "matches": ["*://*/*"],
    "run_at": "document_end",
    "js": ["src/munchkinland.js"]
  }],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": { "128": "icon128.png" },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "*://*/"
  ]
}
